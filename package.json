{
  "name": "@canary-ui/components",
  "version": "0.3.0",
  "description": "A comprehensive React component library implementing the Canary design system",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./tailwind.preset": "./tailwind.preset.js"
  },
  "files": [
    "dist",
    "tailwind.preset.js",
    "README.md"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "dev": "pnpm --filter @canary-ui/demo dev",
    "dev:demo": "pnpm --filter @canary-ui/demo dev",
    "build:css": "cp components/canary-ui/styles.css dist/styles.css",
    "build:lib": "tsup && pnpm build:css",
    "build": "pnpm build:lib",
    "build:demo": "pnpm --filter @canary-ui/demo build",
    "start:demo": "pnpm --filter @canary-ui/demo start",
    "lint": "eslint",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "canary",
    "typescript",
    "tailwind"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/msantana-canary/canary-prototype-foundation.git"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "@mdi/react": "^1.6.1",
    "clsx": "^2.1.1",
    "intl-tel-input": "^25.12.5",
    "react-payment-inputs": "^1.2.0",
    "zustand": "^5.0.8"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "postcss": "^8",
    "postcss-cli": "^11",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwindcss": "^4",
    "tsup": "^8.5.0",
    "typescript": "^5"
  }
}
